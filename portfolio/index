      <nav>
        <h3>Navigation</h3>
        <!--drop down button modeled after w3 schools example-->
        <div class="dropdown">
                <button onclick="buttonClick()" class="dropbtn">Click me!</button>
                <div id="myDropdown" class="dropdown-content">
                  <a href="projects">Projects</a>
                  <a href="resume">Resume</a>
                </div>
              </div> 
      </nav>
  
      <article>
        <h2>About me!</h2>
